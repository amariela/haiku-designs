<div id="<%= dom_id product %>" class="card productCard d-flex flex-column align-items-center p-3">
    <div class="card-body">
        <h4 class="card-title productName"><%= product.name %></h4>
        <h6 class="card-subtitle text-muted">$<%= product.price %></h6>
        <img src="../furniture-holder.jpg" alt="dummy picture" class="productImg" width="250"/>
    </div>
    <%= render "cartBtn", product: product %>
</div>