<div id="<%= dom_id product %>" class="card h-100 shadow-sm border-0">
  <img src="/furniture-holder.jpg" alt="Product Image" class="card-img-top img-fluid rounded-top" style="height: 200px; object-fit: cover;">

  <div class="card-body d-flex flex-column justify-content-between text-center">
    <h5 class="card-title fw-semibold mb-1"><%= product.name %></h5>
    <p class="card-subtitle text-muted mb-3">$<%= number_with_precision(product.price, precision: 2) %></p>

    <%= render "cartBtn", product: product %>
  </div>
</div>
