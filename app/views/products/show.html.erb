<% content_for :title, "#{@product.name} | Haiku Designs" %>

<p style="color: green"><%= notice %></p>

<div class="container">
    <div class="row">
        <div class="col-4">
            <img src="../furniture-holder.jpg" alt="dummy picture" class="productImg" width="400"/>
        </div>
        <div class="col">
            <h1 class="pb-2"><%= @product.name %></h1>
            <h3 class="text-muted pb-2">$<%= @product.price %></h3>
            <h6>Description:</h6>
            <p><%= @product.description %></p>
            <h6>Stock Available:</h6>
            <p><%= @product.stock_quantity %></p>
            <h6>Category:</h6>
            <p><%= @category.name %></p>
            <%= link_to "Back to products", products_path, class: "btn btn-dark mt-3" %>
            <%= link_to "Add to Cart", products_path, class: "btn btn-success mt-3" %>
        </div>
    </div>
</div>
