<p style="color: green"><%= notice %></p>

<div class="container">
    <div class="row">
        <div class="col-4">
            <img src="../furniture-holder.jpg" alt="dummy picture" class="productImg" width="400"/>
        </div>
        <div class="col">
            <h1 class="pb-2"><%= @product.name %></h1>
            <h3 class="text-muted pb-2">$<%= @product.price %></h3>
            <h6>Description:</h6>
            <p><%= @product.description %></p>
            <h6>Stock Available:</h6>
            <p><%= @product.stock_quantity %></p>
            <h6>Category:</h6>
            <p><%= @category.name %></p>
        </div>
    </div>
</div>

<div class="container">
  <%= link_to "Edit this product", edit_product_path(@product) %> |
  <%= link_to "Back to products", products_path %>

  <%= button_to "Destroy this product", @product, method: :delete %>
</div>