<% content_for :title, "#{@product.name} | Haiku Designs" %>

<p style="color: green"><%= notice %></p>

<div class="container">
    <div class="row">
        <div class="col-5">
            <%= link_to "Back to products", products_path, class: "link-secondary link-offset-2 link-underline-opacity-25 mb-2" %>
            <img src="../furniture-holder.jpg" alt="dummy picture" class="productImg" width="400"/>
        </div>
        <div class="col">
            <h1 class="pb-2"><%= @product.name %></h1>
            <h3 class="text-muted pb-2">$<%= @product.price %></h3>
            <h6>Description:</h6>
            <p><%= @product.description %></p>
            <h6>Stock Available:</h6>
            <p><%= @product.stock_quantity %></p>
            <h6>Category:</h6>
            <p><%= @category.name %></p>
            <div class="d-flex gap-2">
                <%= render "cartBtn", product: @product %>
            </div>
        </div>
    </div>
</div>
