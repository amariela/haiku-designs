<div class="container mt-5 d-flex justify-content-center">
  <div class="card shadow-lg p-4 w-100" style="max-width: 400px;">
    <h2 class="text-center mb-4">Welcome Back</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "you@example.com" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "••••••••" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="d-grid mb-3">
        <%= f.submit "Log in", class: "btn btn-dark" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
