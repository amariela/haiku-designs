<h1>Edit Shipping Details</h1>

<% if @shipment.errors.any? %>
  <div class="alert alert-danger">
    <h4>The following errors prevented saving:</h4>
    <ul>
      <% @shipment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @shipment, url: shipment_path, method: :patch, class: "row flex-column g-2 w-50", local: true do |f| %>
  <div class="form-group row flex-row">
      <div class="field w-50">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control"%>
      </div>
      <div class="field w-50">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
  </div>

    <div class="row">
        <div class="field">
            <%= f.label :phone_number %>
            <%= f.text_field :phone_number, class: "form-control" %>
        </div>
    </div>

  <div class="row">
      <div class="field">
        <%= f.label :address %>
        <%= f.text_field :address, class: "form-control" %>
      </div>
  </div>

  <div class="form-group row flex-row">
      <div class="field w-50">
        <%= f.label :city %>
        <%= f.text_field :city, class: "form-control" %>
      </div>
      <div class="field w-50">
        <%= f.label :province %>
        <%= f.collection_select :province_id, Province.all, :id, :name, { prompt: "Select Province" }, { class: "form-select" } %>
      </div>
  </div>

  <div class="row">
      <div class="field">
        <%= f.label :postal_code %>
        <%= f.text_field :postal_code, placeholder: "A1AA1A", class: "form-control"%>
      </div>
  </div>

  <div class="mt-3">
    <%= f.submit "Update", class: "btn btn-success" %>
    <%= link_to "Cancel", shipment_path, class: "btn btn-secondary" %>
  </div>
<% end %>
