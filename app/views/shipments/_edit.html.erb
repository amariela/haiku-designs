<%= form_with model: shipment, url: shipment_path, method: :patch, class: "row gy-3", local: true do |f| %>
  <div class="col-md-6">
    <%= f.label :first_name, class: "form-label" %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :last_name, class: "form-label" %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  <div class="col-12">
    <%= f.label :phone_number, class: "form-label" %>
    <%= f.text_field :phone_number, class: "form-control" %>
  </div>

  <div class="col-12">
    <%= f.label :address, class: "form-label" %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :city, class: "form-label" %>
    <%= f.text_field :city, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <%= f.label :province, class: "form-label" %>
    <%= f.collection_select :province_id, Province.all, :id, :name, { prompt: "Select Province" }, { class: "form-select", required: true } %>
  </div>

  <div class="col-12">
    <%= f.label :postal_code, class: "form-label" %>
    <%= f.text_field :postal_code, placeholder: "A1A 1A1", class: "form-control" %>
  </div>

  <div class="col-12 d-flex gap-2 mt-2">
    <%= f.submit "Update", class: "btn btn-success" %>
    <%= link_to "Cancel", shipment_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
