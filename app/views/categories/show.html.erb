<% content_for :title, "#{@category.name} | Haiku Designs" %>

<% if notice.present? %>
  <div class="alert alert-success mt-4 rounded-pill text-center fw-medium shadow-sm">
    <%= notice %>
  </div>
<% end %>

<div class="container py-5">
  <!-- Category Title -->
  <div class="mb-4">
    <h1 class="fw-bold display-5 text-center"><%= @category.name %></h1>
    <p class="text-center text-muted">Explore our handpicked collection of <%= @category.name.downcase %> furniture.</p>
  </div>

  <!-- Category Details -->
  <div class="mb-5">
    <%= render @category %>
  </div>

  <!-- Product Grid -->
  <div id="products" class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    <% @products.each do |product| %>
      <div class="col">
        <a href="<%= product_path(product.id) %>" class="text-decoration-none text-dark h-100 d-block">
          <div class="card h-100 shadow-sm border-0 productCard">
            <img src="/furniture-holder.jpg" alt="Product image" class="card-img-top img-fluid rounded-top" style="object-fit: cover; height: 200px;">
            <div class="card-body d-flex flex-column justify-content-between">
              <h5 class="card-title mb-1 fw-semibold"><%= product.name %></h5>
              <p class="card-text text-muted">$<%= number_with_precision(product.price, precision: 2) %></p>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>
